@model ArtistTracksViewModel
@{ViewBag.Title = Model.Artist.Title;}
@{
ViewBag.Title = Model.Artist.Title;
ViewBag.HeadTitle = Model.Artist.Title;
}

<div class="row-fluid">
	<div class="span8">
		<ul class="breadcrumb">
			<li><a href='@Url.Action("Index", "MusicLibrary", new { })'>@UIStrings.Music</a> <span class="divider">/</span></li>
			<li class="active">@Model.Artist.Title</li>
		</ul>
		
		@{Html.RenderAction("ArtistMusicPlayer", "Stream", new { artistId = @Model.Artist.Id }); }
	</div>
  	
	<div class="span4">
		<div class="span12 row center">
			<img class="lazy img-polaroid img-rounded" src='@Url.ContentLink("Images/default/artist.png")' data-original='@Url.Action("ArtistImage", "MusicLibrary", new { artist =  @Model.Artist.Id, width=250 })' alt="Album cover"/>
		</div>
		
		<dl class="dl-horizontal">
			<dt></dt><dd>@Model.Artist.Title</dd>
		</dl>
	</div>
	
</div>
