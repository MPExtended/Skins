@model LogOnModel


<style type="text/css">
body {
	padding-top: 40px;
	padding-bottom: 40px;
	background-color: #f5f5f5;
	height: auto;
}

.form-signin {
	max-width: 300px;
	padding: 19px 29px 29px;
	margin: 0 auto 20px;
	background-color: #fff;
	border: 1px solid #e5e5e5;
	-webkit-border-radius: 5px;
		 -moz-border-radius: 5px;
		border-radius: 5px;
	-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
		 -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
		box-shadow: 0 1px 2px rgba(0,0,0,.05);
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
	margin-bottom: 10px;
}
.form-signin input[type="text"],
.form-signin input[type="password"] {
	font-size: 16px;
	height: auto;
	margin-bottom: 15px;
	padding: 7px 9px;
}
</style>



<div id="container">

@Html.ValidationSummary(true, UIStrings.LogOnFailed)

@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-signin" }))
{
<h2 class="form-signin-heading">@UIStrings.LogOn</h2>
	
	@Html.TextBoxFor(m => m.UserName, new { @class="input-block-level", placeholder=FormStrings.LogOnUsername })
	@Html.ValidationMessageFor(m => m.UserName)
	
	@Html.PasswordFor(m => m.Password, new { @class="input-block-level", placeholder=FormStrings.LogOnPassword })
	@Html.ValidationMessageFor(m => m.Password)
	
	<label class="checkbox">
	@Html.CheckBoxFor(m => m.RememberMe) @FormStrings.LogOnRememberMe
	</label>
				
	<button type="submit" class="btn btn-large btn-primary">@UIStrings.LogOn</button>
}
</div>